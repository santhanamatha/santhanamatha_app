{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python"
    },
    {
      "src": "src",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "manage.py/$1" },
    { "src": "/(.*)", "dest": "src/$1" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "matha.settings.production",
    "VERCEL": "true"
  }
}
